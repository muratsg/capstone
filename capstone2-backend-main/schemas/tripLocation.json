{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/trip_location.json",
    "type": "object",
    "properties": {
        "id": {
            "type": "number",
            "minimum": 0
          },
        "location": {
            "type": "string",
            "minLength": 1,
            "maxLength": 15
        },
        "position": {
            "type": "number",
            "minimum": 0
        }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "location",
      "position"
    ]
  }