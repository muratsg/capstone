{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/location.json",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1,
        "maxLength": 15
      },
      "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "latitude": {
        "type": "number",
        "minimum": -90,
        "maximum": 90
      },
      "longitude": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "title",
      "latitude",
      "longitude"
    ]
  }
  